<h1>Vistorias a fazer</h1>
<link rel="icon" href="/img/defesa.ico">
<ul class='task-list'>
    {{#if emptyTasks}}
    <p>Não há vistorias cadastradas</p>
    {{/if}}
    {{#each tasks}}
    <li>
        {{#if this.done}}
        <a href="/tasks/edit/{{this.id}}" class="title done">{{this.nome}}</a>
        {{else}}
        <a href="/tasks/edit/{{this.id}}" class="title">{{this.nome}}</a>
        {{/if}}

        <span class="actions">
            <form action="/tasks/done" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="hidden" name="done" value="{{this.done}}">
                <button type="submit">
                    <i class="bi bi-check2"></i>
                </button>
            </form>

            <a href="/tasks/edit/{{this.id}}">
                <i class="bi bi-pencil-square"></i>
            </a>
            <form action="/tasks/remove" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">
                    <i class="bi bi-x-lg"></i>
                </button>
            </form>
        </span>
    </li>
    {{/each}}
</ul>